{
  "manifest_version": 3,
  "name": "即刻绘梦 - 智能图片提取器",
  "version": "2.0",
  "description": "✨ 智能提取网页图片，支持WebP转PNG，一键复制下载，让创意触手可及",
  "icons": {
    "16": "image_fx.jpg",
    "48": "image_fx.jpg",
    "128": "image_fx.jpg"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "即刻绘梦 - 智能图片提取器",
    "default_icon": {
      "16": "image_fx.jpg",
      "48": "image_fx.jpg",
      "128": "image_fx.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.jike.com/*", "*://*.jellow.club/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}